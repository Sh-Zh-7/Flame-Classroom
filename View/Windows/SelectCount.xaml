<Window x:Class="FlameClassroom.Windows.SelectCount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameClassroom.Windows"
        mc:Ignorable="d"
        Title="SelectCount" Height="450" Width="670">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Selection Count" Foreground="#F26B3A" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Black"/>
        <Grid x:Name="targetPosition" Grid.Row="1">
        </Grid>

        <Button Grid.Row="2" x:Name="cancel" HorizontalAlignment="Center" Template="{StaticResource LoginButton}" Style="{StaticResource GreenButtonTrigger}"
                Content="Cancel" Height="45" Width="400" FontSize="25" Foreground="#FFFFFF" Click="Cancel_Click"></Button>
    </Grid>
</Window>
