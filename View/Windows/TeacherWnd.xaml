<Window x:Class="FlameClassroom.Windows.TeacherWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlameClassroom.Windows"
        mc:Ignorable="d"
        Title="TeacherWnd" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontWeight="Bold" FontSize="20" Margin="10, 5, 0, 0" Content="Your IP address is:" Foreground="#777777"/>
        <TextBox Grid.Row="1" Template="{StaticResource BorderInput}"  Style="{StaticResource Form}" Text=""></TextBox>
        <Button Grid.Row="2" Content="start" Width="200" Template="{StaticResource LoginButton}" Style="{StaticResource RedButtonTrigger}"
                Foreground="#FFFFFF" FontSize="20" Height="40"/>
    </Grid>
</Window>
