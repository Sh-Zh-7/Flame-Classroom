<Page x:Class="FlameClassroom.Pages.SubPages.Undo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlameClassroom.Pages.SubPages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="450"
      Title="Undo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label Content="Not Open Yet" Foreground="#F26B3A" FontFamily="Sitka Text" FontSize="30" FontWeight="Bold"  HorizontalAlignment="Center"></Label>
            <Label Content="Please Wait" Foreground="#F26B3A" FontFamily="Sitka Text" FontSize="30" FontWeight="Bold"  HorizontalAlignment="Center"></Label>
            <Ellipse Height="300" Width="300">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/FlameClassroom;component/Images/repairing.png"/>
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>

    </Grid>
</Page>
